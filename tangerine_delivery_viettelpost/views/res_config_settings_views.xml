<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="delivery_grab_res_config_settings_form_view" model="ir.ui.view">
        <field name="name">delivery.base.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="tangerine_delivery_base.delivery_base_res_config_settings_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='tangerine_delivery_base']" position="inside">
                <block title="Grab Express" name="delivery_grab_rules_setting_container">
                    <setting help="This secret code is used to authenticate the API callback from Grab">
                        <field name="grab_api_key"/>
                        <div class="content-group">
                            <button name="grab_generate_api_key"
                                    type="object"
                                    string="Generate API Key"
                                    class="btn-link"
                                    icon="oi-arrow-right"
                            />
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>